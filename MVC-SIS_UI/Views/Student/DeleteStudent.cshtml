@model MVC_SIS_UI.Models.DeleteStudentVM

@{
    ViewBag.Title = "DeleteStudent";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12">
        <h3>Delete Student</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.currentStudent.StudentId)
            string name = Model.currentStudent.FirstName + " " + Model.currentStudent.LastName;
            
            <p>Are you sure that you wish to delete @name's information ?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>
